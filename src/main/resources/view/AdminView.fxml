<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color:#f0f2f5;">

    <!-- Top bar -->
    <top>
        <HBox style="-fx-background-color:#1976D2; -fx-padding:15 20;">
            <children>
                <Label text="Admin Dashboard"
                       style="-fx-text-fill:white; -fx-font-size:18px;"/>
            </children>
        </HBox>
    </top>

    <!-- Center: grouped events -->
    <center>
        <TableView fx:id="showsTable" prefWidth="680" prefHeight="420" style="-fx-padding:10;">
            <columns>
                <TableColumn fx:id="titleCol"   text="Show Title" prefWidth="200"/>
                <TableColumn fx:id="optionsCol" text="Options (Date – Venue)" prefWidth="480"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom Logout -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding:10 20;">
            <children>
                <Button fx:id="logoutBtn"
                        text="Log Out"
                        style="-fx-padding:6 20;"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
